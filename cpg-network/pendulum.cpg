network
{
	g = "-9.81"
}

integrator
{
	method = "runge-kutta"
}

include "physics.cpg"

group "pendulum"
{
	# Generalized coordinates
	q_p = 0.1

	group "pendulum" : body
	{
		l = 1

		X(q_p) = "l * sin(q_p)"
		Y(q_p) = "-l * cos(q_p)"
	}

	# Use lagrange to solve for the EOM
	parse "lagrange.cpg"
	{
		coordinates = "q_p"
	}
}

