node "partial_couple_{left,right}"
{
    a = "[0, 0, 0]"
    a' = "[0, 0, 0]"
}

node "partial_couple_right"
{
    ## 0   0 0
    ## 0.1 0 0.2
    ## 0.2 0 0.4
    a = "[0, 0, 0]"
}

edge "partial_coupling" from "partial_couple_left" to "partial_couple_right"
{
    a'[0, 2] += "[1, 2]"
}

node "deriv_noncont"
{
    ## 0   0 0
    ## 0.2 0 0.3
    ## 0.4 0 0.6
    a = "[0, 0, 0]"

    a'[0, 2] = "[2, 3]"
}

node "deriv_inv_noncont"
{
    ## 0   0 0
    ## 0.1 0 0.2
    ## 0.2 0 0.4
    a = "[0, 0, 0]"

    a'[2, 0] = "[2, 1]"
}

node "deriv_inv_cont"
{
    ## 0   0   0
    ## 0.2 0.3 0.4
    ## 0.4 0.6 0.8
    a = "[0, 0, 0]"

    a'[2, 1, 0] = "[4, 3, 2]"
}

node "deriv_cont"
{
    ## 0  0   0
    ## 0 -0.1 0.2
    ## 0 -0.2 0.4
    a = "[0, 0, 0]"

    a'[1, 2] = "[-1, 2]"
}

node "deriv_looped{1:5}"
{
    ## 0 0    0
    ## 0 0.1 -0.4
    ## 0 0.2 -0.8
    a = "[0, 0, 0]"

    a'[2, 1] = "[-4, 1]"
}

node "deriv_single_index"
{
    ## 0 0
    ## 0 0.2
    ## 0 0.4
