node "multiple_mixed"
{
    ## 0   0   0  0
    ## 0.3 0.1 1 -0.1
    ## 0.6 0.2 2 -0.2
    a = "[0, 0, 0, 0]"

    a'[0, 2] = "[3, 4]"
}

edge on "multiple_mixed"
{
    a'[1, 0, 2] += "[1, 0, 3]"
}

edge on "multiple_mixed"
{
    a'[2, 3] += "[3, -1]"
}

node "direct_edge"
{
    ## -2 0 -4
    a = "[0, 0, 0]" | out

    edge on self
    {
        a[2, 0] <= "[-2, -4]"
    }
}

node "direct_coupling_{left,right}"
{
    a = "[0, 0, 0]" | out
}

node "direct_coupling_left"
{
    ## 3 2 1
    a = "[0, 0, 0]" | out

    edge on self
    {
        a[2, 1, 0] <= "[1, 2, 3]"
    }
}

node "direct_coupling_right"
{
    ## 0 1 3
    a = "[0, 0, 0]" | out
}

edge from "direct_coupling_left" to "direct_coupling_right"
{
    a[2, 1] <= "a[0, 2]"
}

